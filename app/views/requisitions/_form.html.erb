<%= bootstrap_form_for([@profile, @requisition]) do |f| %>
  
  <div class="row">
    <!-- personal info -->
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="simple-box red-b">
        <h2><%= t(:personal_info) %></h2>
        <%= f.text_field :income, data: { role: 'money' } %>
        <%= f.number_field :address_years, min: 0 %>
        <%= f.select :marital_status, Requisition::MARITAL_STATES %>
        <%= f.number_field :dependents_number, min: 0 %>
        <%= f.check_box :has_sgmm %>
        <%= f.check_box :has_imss %>
        <%= f.check_box :has_car %>  
      </div>
    </div>
    
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="simple-box blue-b">
        <h2><%= t(:work_info) %></h2>
        <%= f.number_field :company_years, min: 0 %>
        <%= f.text_field :company_name %>    
        <%= f.text_field :company_phone_number, data: {role: 'phone'} %>      
        <%= f.text_field :company_position %>              
      </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-4">
      <div class="simple-box orane-b">
        <h2><%= t(:requisition) %></h2>
        <%= f.text_field :requested_amount, data: { role: 'money' } %>
        <%= f.select :payment_terms, Requisition::TERMS %>
        <%= f.text_field :bank %>
        <%= f.text_area :comment %>               
      </div>
    </div>
  </div>    
  
  <div class="col-xs-12">
    <%= f.submit class: 'btn btn-success btn-block'%>
  </div>  
  
<% end %>
